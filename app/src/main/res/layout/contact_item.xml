<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/fullname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Овчинников Максим Владиславович" />

    <ImageView
        android:id="@+id/contact_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/fullname_textview"
        app:layout_constraintStart_toEndOf="@+id/fullname_textview"
        app:layout_constraintTop_toTopOf="@+id/fullname_textview"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_contacts_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>