<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="0"
        android:textDirection="rtl"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clearBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="C"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/zeroBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zeroBtn" />

    <TextView
        android:id="@+id/zeroBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/eightBtn"
        app:layout_constraintEnd_toStartOf="@+id/equalsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clearBtn"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <TextView
        android:id="@+id/equalsBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="="
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn"
        app:layout_constraintTop_toTopOf="@+id/zeroBtn" />

    <TextView
        android:id="@+id/sevenBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="7"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/zeroBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eightBtn" />

    <TextView
        android:id="@+id/eightBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="8"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/fiveBtn"
        app:layout_constraintEnd_toStartOf="@+id/equalsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clearBtn"
        app:layout_constraintTop_toBottomOf="@+id/zeroBtn" />

    <TextView
        android:id="@+id/nineBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="9"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn"
        app:layout_constraintTop_toTopOf="@+id/eightBtn" />

    <TextView
        android:id="@+id/fourBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="4"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/zeroBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fiveBtn" />

    <TextView
        android:id="@+id/fiveBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="5"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/secondBtn"
        app:layout_constraintEnd_toStartOf="@+id/equalsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clearBtn"
        app:layout_constraintTop_toBottomOf="@+id/eightBtn" />

    <TextView
        android:id="@+id/sixBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="6"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn"
        app:layout_constraintTop_toTopOf="@+id/fiveBtn" />

    <TextView
        android:id="@+id/oneBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="1"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/zeroBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/secondBtn" />

    <TextView
        android:id="@+id/secondBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="2"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/minusBtn"
        app:layout_constraintEnd_toStartOf="@+id/equalsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clearBtn"
        app:layout_constraintTop_toBottomOf="@+id/fiveBtn" />

    <TextView
        android:id="@+id/threeBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="3"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn"
        app:layout_constraintTop_toTopOf="@+id/secondBtn" />

    <TextView
        android:id="@+id/plusBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="+"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/minusBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minusBtn" />

    <TextView
        android:id="@+id/minusBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="-"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/multyBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plusBtn"
        app:layout_constraintTop_toBottomOf="@+id/secondBtn" />

    <TextView
        android:id="@+id/multyBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="*"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/divideBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/minusBtn"
        app:layout_constraintTop_toTopOf="@+id/minusBtn" />

    <TextView
        android:id="@+id/divideBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="/"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/multyBtn"
        app:layout_constraintTop_toTopOf="@+id/multyBtn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="clearBtn,zeroBtn,nineBtn,oneBtn,multyBtn,eightBtn,fiveBtn,divideBtn,threeBtn,minusBtn,equalsBtn,sixBtn,plusBtn,sevenBtn,fourBtn,secondBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>